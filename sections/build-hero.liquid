<section style="background: linear-gradient(135deg, #0A4B78 0%, #1B3A52 100%); color: white; padding: 80px 20px; text-align: center;">
  <div style="max-width: 800px; margin: 0 auto;">
    <div style="display: inline-block; background: rgba(255,255,255,0.15); padding: 8px 20px; border-radius: 20px; font-size: 13px; font-weight: 700; letter-spacing: 1px; margin-bottom: 20px;">{{ section.settings.badge }}</div>
    <h1 style="font-size: 48px; font-weight: 800; margin-bottom: 20px; line-height: 1.1;">{{ section.settings.heading }}</h1>
    <p style="font-size: 20px; opacity: 0.92; max-width: 650px; margin: 0 auto;">{{ section.settings.subheading }}</p>
    <div style="display: flex; gap: 40px; justify-content: center; margin-top: 40px; flex-wrap: wrap;">
      {% if section.settings.stat1_label != blank %}
        <div><div style="font-size: 28px; font-weight: 800; color: #00A86B;">{{ section.settings.stat1_value }}</div><div style="font-size: 13px; opacity: 0.8; margin-top: 4px;">{{ section.settings.stat1_label }}</div></div>
      {% endif %}
      {% if section.settings.stat2_label != blank %}
        <div><div style="font-size: 28px; font-weight: 800; color: #00A86B;">{{ section.settings.stat2_value }}</div><div style="font-size: 13px; opacity: 0.8; margin-top: 4px;">{{ section.settings.stat2_label }}</div></div>
      {% endif %}
      {% if section.settings.stat3_label != blank %}
        <div><div style="font-size: 28px; font-weight: 800; color: #00A86B;">{{ section.settings.stat3_value }}</div><div style="font-size: 13px; opacity: 0.8; margin-top: 4px;">{{ section.settings.stat3_label }}</div></div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Build Hero",
  "settings": [
    { "type": "text", "id": "badge", "label": "Badge", "default": "CUSTOM RIGGING" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Start Your Build" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Tell us about your kayak and how you fish. We'll spec the perfect rig and send you an honest quote â€” usually within 24 hours." },
    { "type": "text", "id": "stat1_value", "label": "Stat 1 Value", "default": "$3,500+" },
    { "type": "text", "id": "stat1_label", "label": "Stat 1 Label", "default": "Packages starting at" },
    { "type": "text", "id": "stat2_value", "label": "Stat 2 Value", "default": "24hr" },
    { "type": "text", "id": "stat2_label", "label": "Stat 2 Label", "default": "Quote turnaround" },
    { "type": "text", "id": "stat3_value", "label": "Stat 3 Value", "default": "100%" },
    { "type": "text", "id": "stat3_label", "label": "Stat 3 Label", "default": "Custom builds" }
  ],
  "presets": [{ "name": "Build Hero" }]
}
{% endschema %}
