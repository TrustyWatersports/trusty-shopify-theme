<section style="padding: 80px 20px; background: {{ section.settings.background_color }};">
  <div style="max-width: 900px; margin: 0 auto;">
    <h2 style="font-size: 38px; font-weight: 800; color: var(--ocean-deep); margin-bottom: 40px; text-align: center;">{{ section.settings.heading }}</h2>
    {% for block in section.blocks %}
      <div {{ block.shopify_attributes }} style="background: white; padding: 25px; border-radius: 8px; margin-bottom: 15px;">
        <h4 style="font-size: 18px; color: var(--ocean-deep); margin-bottom: 10px;">{{ block.settings.question }}</h4>
        <p style="color: var(--gray-medium); line-height: 1.7;">{{ block.settings.answer }}</p>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Rentals FAQ",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Rental FAQ" },
    { "type": "color", "id": "background_color", "label": "Background color", "default": "#F5F7FA" }
  ],
  "blocks": [{
    "type": "faq",
    "name": "FAQ Item",
    "settings": [
      { "type": "text", "id": "question", "label": "Question", "default": "What should I bring?" },
      { "type": "textarea", "id": "answer", "label": "Answer", "default": "Water bottle, sunscreen, hat, and appropriate clothing. We provide kayak, paddle, and PFD." }
    ]
  }],
  "presets": [{ "name": "Rentals FAQ" }]
}
{% endschema %}
