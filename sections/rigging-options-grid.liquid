{% comment %}
Rigging Options Grid (OS2)
- Blocks = option cards with image spots
{% endcomment %}

<div class="cr-options">
  <div class="cr-options__inner">
    {% if section.settings.title != blank %}
      <h2 class="cr-options__title">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.subtitle != blank %}
      <p class="cr-options__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}

    <div class="cr-options__grid">
      {% for block in section.blocks %}
        <div class="cr-card" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <div class="cr-card__img">
              <img
                src="{{ block.settings.image | image_url: width: 900 }}"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
                width="900"
                height="600">
            </div>
          {% endif %}

          <div class="cr-card__body">
            {% if block.settings.title != blank %}
              <h3 class="cr-card__title">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.text != blank %}
              <div class="cr-card__text">{{ block.settings.text }}</div>
            {% endif %}
            {% if block.settings.link != blank and block.settings.link_text != blank %}
              <a class="cr-card__link" href="{{ block.settings.link }}">{{ block.settings.link_text }}</a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .cr-options{background:#f6f8fb;padding:64px 0}
  .cr-options__inner{max-width:1200px;margin:0 auto;padding:0 18px}
  .cr-options__title{font-size:clamp(28px,3vw,40px);margin:0 0 8px;color:#123b5d;font-weight:900}
  .cr-options__subtitle{margin:0 0 28px;color:#5a7286;max-width:820px}
  .cr-options__grid{display:grid;gap:18px;grid-template-columns:repeat(3,minmax(0,1fr))}
  .cr-card{background:#fff;border-radius:14px;overflow:hidden;box-shadow:0 8px 24px rgba(0,0,0,.08);display:flex;flex-direction:column}
  .cr-card__img img{width:100%;height:210px;object-fit:cover;display:block}
  .cr-card__body{padding:18px}
  .cr-card__title{margin:0 0 8px;font-size:18px;font-weight:900;color:#123b5d}
  .cr-card__text{color:#3b556a;line-height:1.5}
  .cr-card__link{display:inline-block;margin-top:12px;font-weight:800;color:#00A86B;text-decoration:none}
  .cr-card__link:hover{text-decoration:underline}
  @media(max-width:980px){.cr-options__grid{grid-template-columns:repeat(2,minmax(0,1fr))}}
  @media(max-width:640px){.cr-options__grid{grid-template-columns:1fr}}
</style>

{% schema %}
{
  "name": "Rigging Options",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Pick Your Build Path" },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "Choose a package, or mix and match options. Each card can have its own image and link." }
  ],
  "blocks": [
    {
      "type": "option",
      "name": "Option",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "title", "label": "Title", "default": "Electronics" },
        { "type": "textarea", "id": "text", "label": "Text", "default": "Graphs, power, wiring, transducers and clean installs." },
        { "type": "text", "id": "link_text", "label": "Link text", "default": "Learn more" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Rigging Options",
      "blocks": [
        { "type": "option" },
        { "type": "option" },
        { "type": "option" }
      ]
    }
  ]
}
{% endschema %}
