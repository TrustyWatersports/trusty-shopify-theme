<section class="rigging-options" style="background:{{ section.settings.bg }};">
  <div style="max-width:1100px;margin:0 auto;padding:42px 20px;">
    {% if section.settings.heading != blank %}
      <h2 style="margin:0 0 10px;color:#fff;font-size:44px;line-height:1.1;font-weight:800;">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p style="margin:0 0 28px;color:#e6f0ff;max-width:760px;">
        {{ section.settings.subheading }}
      </p>
    {% endif %}

    <div style="display:grid;grid-template-columns:repeat(3,minmax(0,1fr));gap:16px;">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" {{ block.shopify_attributes }}
           style="display:block;background:rgba(255,255,255,.06);border:1px solid rgba(255,255,255,.14);border-radius:14px;overflow:hidden;text-decoration:none;">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url: width: 1200 }}"
                 alt="{{ block.settings.image.alt | escape }}"
                 loading="lazy"
                 style="width:100%;height:180px;object-fit:cover;display:block;">
          {% endif %}
          <div style="padding:16px;">
            <div style="color:#fff;font-weight:800;font-size:18px;margin-bottom:8px;">
              {{ block.settings.title }}
            </div>
            {% if block.settings.text != blank %}
              <div style="color:#e6f0ff;opacity:.95;">
                {{ block.settings.text }}
              </div>
            {% endif %}
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rigging Options",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Choose Your Rigging Path" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Select an option to explore packages or request a build." },
    { "type": "color", "id": "bg", "label": "Background", "default": "#0a2f3f" }
  ],
  "blocks": [
    {
      "type": "option",
      "name": "Option",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Option title" },
        { "type": "textarea", "id": "text", "label": "Text", "default": "Short description" },
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "presets": [
    { "name": "Rigging Options" }
  ]
}
{% endschema %}
