<div style="max-width: 1200px; margin: 100px auto; padding: 0 20px;">
  <div style="text-align: center; margin-bottom: 60px;">
    <h2 style="font-size: 48px; font-weight: 900; color: var(--ocean-deep); margin-bottom: 20px;">{{ section.settings.heading }}</h2>
    <p style="font-size: 20px; color: var(--gray-medium);">{{ section.settings.description }}</p>
  </div>

  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 40px;">
    {% for block in section.blocks %}
    <div style="text-align: center;" {{ block.shopify_attributes }}>
      <div style="width: 80px; height: 80px; background: {{ block.settings.gradient }}; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px; font-size: 36px;">{{ block.settings.icon }}</div>
      <h3 style="font-size: 22px; font-weight: 800; color: var(--ocean-deep); margin-bottom: 12px;">{{ block.settings.title }}</h3>
      <p style="line-height: 1.7; color: var(--text-dark);">{{ block.settings.description }}</p>
    </div>
    {% endfor %}
  </div>
</div>

