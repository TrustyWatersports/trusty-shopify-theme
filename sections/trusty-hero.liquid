<section class="trusty-hero" data-interval="{{ section.settings.interval_ms }}">
  <!-- Carousel slides -->
  <div class="trusty-hero__slides">
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        {% assign is_first = forloop.first %}
        <div class="trusty-hero__slide{% if is_first %} is-active{% endif %}" {{ block.shopify_attributes }} style="background-image: url('{% if block.settings.slide_image != blank %}{{ block.settings.slide_image | image_url: width: 1600 }}{% endif %}');"></div>
      {% endfor %}
    {% else %}
      <!-- Fallback to single image if no blocks -->
      <div class="trusty-hero__slide is-active" style="background-image: url('{{ section.settings.hero_image | image_url: width: 1600 }}');"></div>
    {% endif %}
  </div>

  <div class="trusty-hero__content">
    <div class="trusty-hero__badge">
      {{ section.settings.badge_text }}
    </div>
    <h1>
      {{ section.settings.heading_part1 }} <span class="highlight">{{ section.settings.heading_part2 }}</span> {{ section.settings.heading_part3 }}
    </h1>
    <p class="trusty-hero__description">
      {{ section.settings.description }}
    </p>
    <div class="trusty-hero__ctas">
      <a href="{{ section.settings.primary_button_link }}" class="btn btn-primary">
        {{ section.settings.primary_button_text }}
      </a>
      <a href="{{ section.settings.secondary_button_link }}" class="btn btn-secondary">
        {{ section.settings.secondary_button_text }}
      </a>
    </div>
  </div>
</section>

<style>
  .trusty-hero__slides {
    position: absolute;
    inset: 0;
  }
  .trusty-hero__slide {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    opacity: 0;
    transition: opacity 750ms ease;
  }
  .trusty-hero__slide.is-active {
    opacity: 0.35;
  }
</style>

<script>
  (function(){
    const hero = document.currentScript.previousElementSibling?.previousElementSibling;
    if(!hero || !hero.classList.contains('trusty-hero')) return;

    const slides = Array.from(hero.querySelectorAll('.trusty-hero__slide'));
    if(slides.length <= 1) return;

    const interval = parseInt(hero.getAttribute('data-interval') || '5000', 10);
    let i = 0;

    setInterval(() => {
      slides.forEach((s, n) => s.classList.toggle('is-active', n === i));
      i = (i + 1) % slides.length;
    }, interval);
  })();
</script>

