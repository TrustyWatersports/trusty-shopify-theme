<section class="trusty-hero" data-interval="{{ section.settings.interval_ms }}">
  <!-- Carousel slides -->
  <div class="trusty-hero__slides">
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        {% assign is_first = forloop.first %}
        {% if block.type == 'video_slide' %}
          <div class="trusty-hero__slide{% if is_first %} is-active{% endif %} trusty-hero__slide--video" {{ block.shopify_attributes }}>
            {% if block.settings.video_url != blank %}
              <video
                autoplay
                muted
                loop
                playsinline
                class="trusty-hero__video"
                poster="{% if block.settings.fallback_image != blank %}{{ block.settings.fallback_image | image_url: width: 1600 }}{% endif %}"
              >
                <source src="{{ block.settings.video_url }}" type="video/mp4">
              </video>
            {% elsif block.settings.fallback_image != blank %}
              {%- comment -%}No video URL set yet, show fallback image{%- endcomment -%}
            {% endif %}
          </div>
        {% else %}
          <div class="trusty-hero__slide{% if is_first %} is-active{% endif %}" {{ block.shopify_attributes }} style="background-image: url('{% if block.settings.slide_image != blank %}{{ block.settings.slide_image | image_url: width: 1600 }}{% endif %}');"></div>
        {% endif %}
      {% endfor %}
    {% else %}
      <!-- Fallback to single image if no blocks -->
      <div class="trusty-hero__slide is-active" style="background-image: url('{{ section.settings.hero_image | image_url: width: 1600 }}');"></div>
    {% endif %}
  </div>

  <!-- Overlay for darkening -->
  <div class="trusty-hero__overlay"></div>

  <div class="trusty-hero__content">
    <div class="trusty-hero__badge">
      {{ section.settings.badge_text }}
    </div>
    <h1>
      {{ section.settings.heading_part1 }} <span class="highlight">{{ section.settings.heading_part2 }}</span> {{ section.settings.heading_part3 }}
    </h1>
    <p class="trusty-hero__description">
      {{ section.settings.description }}
    </p>
    <div class="trusty-hero__ctas">
      <a href="{{ section.settings.primary_button_link }}" class="btn btn-primary">
        {{ section.settings.primary_button_text }}
      </a>
      <a href="{{ section.settings.secondary_button_link }}" class="btn btn-secondary">
        {{ section.settings.secondary_button_text }}
      </a>
      <a href="{{ section.settings.tertiary_button_link }}" class="btn btn-secondary">
        {{ section.settings.tertiary_button_text }}
      </a>
    </div>
  </div>
</section>

<style>
  .trusty-hero__slides {
    position: absolute;
    inset: 0;
  }
  .trusty-hero__slide {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    opacity: 0;
    transition: opacity 1000ms ease;
  }
  .trusty-hero__slide.is-active {
    opacity: 1;
  }
  /* Video slide: no background-image, video fills the container */
  .trusty-hero__slide--video {
    background-image: none !important;
  }
  .trusty-hero__video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  .trusty-hero__content {
    position: relative;
    z-index: 10;
  }
  .trusty-hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(27,58,82,0.7), rgba(10,75,120,0.7));
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none;
    z-index: 5;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const heroes = document.querySelectorAll('.trusty-hero');
    
    heroes.forEach(function(hero) {
      const slides = hero.querySelectorAll('.trusty-hero__slide');
      
      if (slides.length <= 1) {
        // Still need to play any video on single-slide heroes
        const video = hero.querySelector('.trusty-hero__video');
        if (video) video.play();
        return;
      }

      const intervalSeconds = parseInt(hero.getAttribute('data-interval') || '5', 10);
      let currentIndex = 0;

      function showSlide(index) {
        slides.forEach(function(slide, i) {
          const video = slide.querySelector('.trusty-hero__video');
          if (i === index) {
            slide.classList.add('is-active');
            if (video) { video.currentTime = 0; video.play(); }
          } else {
            slide.classList.remove('is-active');
            if (video) video.pause();
          }
        });
      }

      // Start carousel
      setInterval(function() {
        currentIndex = (currentIndex + 1) % slides.length;
        showSlide(currentIndex);
      }, intervalSeconds * 1000);
    });
  });
</script>

