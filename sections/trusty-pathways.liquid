<section class="trusty-pathways">
  <div class="trusty-pathways__container">
    <div class="trusty-pathways__header">
      <h2>{{ section.settings.heading }}</h2>
      <p class="trusty-pathways__subtitle">{{ section.settings.subtitle }}</p>
    </div>
    
    <div class="trusty-pathways__grid">
      {% for block in section.blocks %}
        <div class="pathway-card pathway-card--{{ block.settings.style }}" {{ block.shopify_attributes }}>
          <div class="pathway-card__icon">{{ block.settings.icon }}</div>
          <div class="pathway-card__label">{{ block.settings.label }}</div>
          <h3>{{ block.settings.title }}</h3>
          <p class="pathway-card__description">{{ block.settings.description }}</p>
          <ul class="pathway-card__features">
            {% if block.settings.feature_1 != blank %}
              <li>‚úì {{ block.settings.feature_1 }}</li>
            {% endif %}
            {% if block.settings.feature_2 != blank %}
              <li>‚úì {{ block.settings.feature_2 }}</li>
            {% endif %}
            {% if block.settings.feature_3 != blank %}
              <li>‚úì {{ block.settings.feature_3 }}</li>
            {% endif %}
            {% if block.settings.feature_4 != blank %}
              <li>‚úì {{ block.settings.feature_4 }}</li>
            {% endif %}
            {% if block.settings.feature_5 != blank %}
              <li>‚úì {{ block.settings.feature_5 }}</li>
            {% endif %}
          </ul>
          <a href="{{ block.settings.button_link }}" class="pathway-card__cta">
            {{ block.settings.button_text }}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

