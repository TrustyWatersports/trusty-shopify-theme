<section style="background: linear-gradient(135deg, #00A86B 0%, #0A4B78 100%); padding: 80px 20px; text-align: center; color: white;">
  <div style="max-width: 800px; margin: 0 auto;">
    <h2 style="font-size: 38px; font-weight: 800; margin-bottom: 15px;">{{ section.settings.heading }}</h2>
    <p style="font-size: 18px; opacity: 0.95; margin-bottom: 35px;">{{ section.settings.subheading }}</p>
    <div style="display: flex; gap: 15px; justify-content: center; flex-wrap: wrap;">
      <a href="{{ section.settings.primary_cta_link }}" style="background: white; color: #00A86B; padding: 16px 36px; border-radius: 6px; text-decoration: none; font-weight: 800; font-size: 18px;">{{ section.settings.primary_cta_text }} â†’</a>
      <a href="{{ section.settings.secondary_cta_link }}" style="background: rgba(255,255,255,0.15); color: white; border: 2px solid white; padding: 16px 36px; border-radius: 6px; text-decoration: none; font-weight: 700; font-size: 16px;">{{ section.settings.secondary_cta_text }}</a>
    </div>
    {% if section.settings.note != blank %}
      <p style="margin-top: 25px; opacity: 0.85; font-size: 15px;">{{ section.settings.note }}</p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Packages CTA",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Not Sure Which Package Is Right For You?" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Tell us about your kayak and how you fish. We'll spec the perfect build and give you an honest quote." },
    { "type": "text", "id": "primary_cta_text", "label": "Primary button text", "default": "Start Your Build" },
    { "type": "url", "id": "primary_cta_link", "label": "Primary button link" },
    { "type": "text", "id": "secondary_cta_text", "label": "Secondary button text", "default": "ðŸ“ž (252) 499-9911" },
    { "type": "url", "id": "secondary_cta_link", "label": "Secondary button link" },
    { "type": "text", "id": "note", "label": "Fine print note", "default": "Packages are starting points â€” every build is fully customizable." }
  ],
  "presets": [{ "name": "Packages CTA" }]
}
{% endschema %}
