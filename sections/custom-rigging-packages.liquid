<section class="cr-packages">
  <div class="page-width">

    {% for block in section.blocks %}
      <div class="cr-package">

        {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | image_url }}" alt="">
        {% endif %}

        <h3>{{ block.settings.title }}</h3>
        <p>{{ block.settings.description }}</p>

        {% if block.settings.cta_link != blank %}
          <a class="button" href="{{ block.settings.cta_link }}">
            {{ block.settings.cta_text }}
          </a>
        {% endif %}

      </div>
    {% endfor %}

  </div>
</section>

{% schema %}
{
  "name": "Rigging Packages",
  "blocks": [
    {
      "type": "package",
      "name": "Package",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Package Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Tournament Package"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Fully wired and ready to fish."
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "Button Text",
          "default": "View Package"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "Button Link",
          "default": ""
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Rigging Packages",
      "blocks": [
        { "type": "package" },
        { "type": "package" },
        { "type": "package" }
      ]
    }
  ]
}
{% endschema %}
