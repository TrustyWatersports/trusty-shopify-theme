<section class="rigging-packages">
  <div class="page-width">

    <h2>{{ section.settings.heading }}</h2>

    <div class="packages-grid">
      {% for block in section.blocks %}
        <div class="package-card">

          {% if block.settings.image != blank %}
            <img
              src="{{ block.settings.image | image_url: width: 800 }}"
              alt="{{ block.settings.title }}"
            >
          {% endif %}

          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>

          {% if block.settings.cta_link != blank %}
            <a href="{{ block.settings.cta_link }}" class="button">
              {{ block.settings.cta_text }}
            </a>
          {% endif %}

        </div>
      {% endfor %}

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Rigging Packages",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Rigging Packages"
    }
  ],
  "blocks": [
    {
      "type": "package",
      "name": "Package",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Package Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Package Title",
          "default": "Pro Rig Package"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Professional tournament rigging setup."
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "Button Text",
          "default": "View Package"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "Button Link",
          "default": ""
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Custom Rigging Packages"
    }
  ]
}
{% endschema %}
