<section style="padding:70px 20px; background:#F5F7FA;">
  <div style="max-width:1400px; margin:0 auto;">
    <div style="text-align:center; margin-bottom:36px;">
      <h2 style="font-size: clamp(30px, 4vw, 44px); font-weight:900; color:#0A4B78; margin:0 0 10px;">
        {{ section.settings.heading }}
      </h2>
      {% if section.settings.subheading != blank %}
        <p style="color:#8B9DAF; font-size:18px; margin:0 auto; max-width:840px;">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>

    <div style="display:grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap:22px;">
      {% for block in section.blocks %}
        <div style="background:#fff; border-radius:16px; overflow:hidden; box-shadow:0 6px 22px rgba(0,0,0,.08); border-top: 5px solid #00A86B;" {{ block.shopify_attributes }}>
          <div style="height:180px; background:#0A4B78;">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | image_url: width: 1200 }}"
                   alt="{{ block.settings.title | escape }}"
                   loading="lazy"
                   style="width:100%; height:100%; object-fit:cover;">
            {% endif %}
          </div>

          <div style="padding:18px 18px 20px;">
            <div style="font-weight:900; font-size:20px; color:#0A4B78;">{{ block.settings.title }}</div>
            {% if block.settings.price_note != blank %}
              <div style="margin-top:4px; color:#00A86B; font-weight:800;">{{ block.settings.price_note }}</div>
            {% endif %}
            {% if block.settings.description != blank %}
              <p style="margin-top:10px; color:#2C3E50; opacity:.9; line-height:1.6;">{{ block.settings.description }}</p>
            {% endif %}

            <div style="margin-top:14px; display:flex; gap:10px; flex-wrap:wrap;">
              {% if block.settings.cta_text != blank %}
                <a href="{{ block.settings.cta_link }}"
                   style="display:inline-block; background:#00A86B; color:#fff; text-decoration:none; font-weight:900; padding:10px 14px; border-radius:10px;">
                  {{ block.settings.cta_text }}
                </a>
              {% endif %}
              {% if block.settings.secondary_text != blank %}
                <a href="{{ block.settings.secondary_link }}"
                   style="display:inline-block; border:2px solid #0A4B78; color:#0A4B78; text-decoration:none; font-weight:900; padding:8px 12px; border-radius:10px;">
                  {{ block.settings.secondary_text }}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Rigging Packages",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Rigging Packages" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Choose a proven package, then customize it with electronics, power, and accessories." }
  ],
  "blocks": [
    { "type": "package", "name": "Package", "settings": [
      { "type": "image_picker", "id": "image", "label": "Package image" },
      { "type": "text", "id": "title", "label": "Title", "default": "Tournament Starter" },
      { "type": "text", "id": "price_note", "label": "Price note", "default": "From $1,499" },
      { "type": "textarea", "id": "description", "label": "Description", "default": "Clean wiring, pro mounting, and a solid base for upgrades." },

      { "type": "text", "id": "cta_text", "label": "Primary CTA text", "default": "Get a Quote" },
      { "type": "url", "id": "cta_link", "label": "Primary CTA link", "default": "/pages/contact" },

      { "type": "text", "id": "secondary_text", "label": "Secondary CTA text", "default": "See Details" },
      { "type": "url", "id": "secondary_link", "label": "Secondary CTA link", "default": "/pages/custom-rigging" }
    ]}
  ],
  "max_blocks": 12,
  "presets": [
    { "name": "Custom Rigging Packages" }
  ]
}
{% endschema %}
