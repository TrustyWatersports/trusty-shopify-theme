    { "type": "text", "id": "shop_phone", "label": "Phone", "default": "(252) 499-9911" },
    { "type": "text", "id": "shop_hours", "label": "Hours", "default": "Monday‚ÄìSaturday: 10am‚Äì5pm | Sunday: Closed" },
    { "type": "url", "id": "shop_directions_url", "label": "Directions link" },
    { "type": "header", "content": "Waterfront Location" },
    { "type": "text", "id": "waterfront_title", "label": "Title", "default": "Waterfront Rentals" },
    { "type": "textarea", "id": "waterfront_description", "label": "Description", "default": "Launch directly from Bogue Sound. Rentals, tours, and try-before-you-buy." },
    { "type": "text", "id": "waterfront_address", "label": "Address", "default": "815 Shepard St, Morehead City, NC 28557" },
    { "type": "text", "id": "waterfront_phone", "label": "Phone", "default": "(252) 515-4866" },
