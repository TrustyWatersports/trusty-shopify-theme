    { "type": "text", "id": "stat_2_label", "label": "Stat 2 label", "default": "Custom Rigs Built" },
    { "type": "text", "id": "stat_3_number", "label": "Stat 3 number", "default": "60+" },
    { "type": "text", "id": "stat_3_label", "label": "Stat 3 label", "default": "Boats In Stock" },
    { "type": "text", "id": "stat_4_number", "label": "Stat 4 number", "default": "100%" },
    { "type": "text", "id": "stat_4_label", "label": "Stat 4 label", "default": "Local Experts" }
  ],
  "blocks": [{
    "type": "highlight",
    "name": "Highlight",
    "settings": [
      { "type": "text", "id": "emoji", "label": "Emoji", "default": "üö£" },
      { "type": "text", "id": "title", "label": "Title", "default": "60+ Boats In Stock" },
      { "type": "textarea", "id": "description", "label": "Description", "default": "Compare kayaks side-by-side. We stock what works on these waters." }
    ]
  }],
  "presets": [{ "name": "Showroom Info" }]
}
