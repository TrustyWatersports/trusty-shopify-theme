{% schema %}
{
  "name": "Blog Post Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "post_title",
      "label": "Post Title",
      "default": "Blog Post Title"
    },
    {
      "type": "text",
      "id": "author",
      "label": "Author",
      "default": "Written By Heather Fournel"
    },
    {
      "type": "range",
      "id": "hero_height",
      "min": 400,
      "max": 700,
      "step": 50,
      "unit": "px",
      "label": "Hero Height",
      "default": 500
    }
  ]
}
{% endschema %}

<section style="position: relative; height: {{ section.settings.hero_height }}px; overflow: hidden;">
  {% if section.settings.hero_image %}
    <img src="{{ section.settings.hero_image | img_url: '2048x' }}" alt="{{ section.settings.post_title }}" style="width: 100%; height: 100%; object-fit: cover;">
  {% endif %}
  <div style="position: absolute; bottom: 0; left: 0; right: 0; background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, transparent 100%); padding: 60px 20px 40px;">
    <div style="max-width: 900px; margin: 0 auto;">
      <h1 style="color: white; font-size: 3rem; margin-bottom: 1rem; line-height: 1.2;">{{ section.settings.post_title }}</h1>
      <p style="color: white; font-size: 1.1rem; opacity: 0.95;">{{ section.settings.author }}</p>
    </div>
  </div>
</section>
