<section style="padding: 80px 20px; background: {{ section.settings.background_color }};">
  <div style="max-width: 1200px; margin: 0 auto;">

    <!-- Header -->
    <div style="text-align: center; margin-bottom: 50px;">
      <div style="display: flex; align-items: center; justify-content: center; gap: 12px; margin-bottom: 16px;">
        <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 48 48">
          <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.08 17.74 9.5 24 9.5z"/>
          <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
          <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
          <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.18 1.48-4.97 2.31-8.16 2.31-6.26 0-11.57-3.59-13.46-8.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
        </svg>
        <div>
          <div style="display: flex; gap: 2px;">
            <span style="color: #FBBC05; font-size: 24px;">★★★★★</span>
          </div>
          <div style="font-size: 14px; color: #666; margin-top: 2px;">{{ section.settings.review_count }}</div>
        </div>
      </div>
      <h2 style="font-size: 38px; font-weight: 800; color: #0A4B78; margin-bottom: 12px;">{{ section.settings.heading }}</h2>
      <p style="font-size: 18px; color: #666; max-width: 600px; margin: 0 auto;">{{ section.settings.subheading }}</p>
    </div>

    <!-- Review Cards -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 28px; margin-bottom: 50px;">
      {% for block in section.blocks %}
        <div {{ block.shopify_attributes }} style="background: white; border-radius: 12px; padding: 32px; box-shadow: 0 4px 16px rgba(0,0,0,0.08); border-top: 4px solid #FBBC05; display: flex; flex-direction: column; gap: 16px;">
          <div style="display: flex; gap: 2px;">
            <span style="color: #FBBC05; font-size: 18px;">★★★★★</span>
          </div>
          <p style="color: #333; font-size: 16px; line-height: 1.7; flex-grow: 1; font-style: italic;">"{{ block.settings.review_text }}"</p>
          <div style="display: flex; align-items: center; gap: 12px; padding-top: 16px; border-top: 1px solid #f0f0f0;">
            <div style="width: 44px; height: 44px; border-radius: 50%; background: linear-gradient(135deg, #0A4B78, #1E6FA8); display: flex; align-items: center; justify-content: center; color: white; font-weight: 800; font-size: 18px; flex-shrink: 0;">
              {{ block.settings.reviewer_name | slice: 0 }}
            </div>
            <div>
              <div style="font-weight: 700; color: #0A4B78; font-size: 15px;">{{ block.settings.reviewer_name }}</div>
              <div style="font-size: 13px; color: #888;">{{ block.settings.review_date }}</div>
            </div>
            <svg style="margin-left: auto; flex-shrink: 0;" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 48 48">
              <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.08 17.74 9.5 24 9.5z"/>
              <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
              <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
              <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.18 1.48-4.97 2.31-8.16 2.31-6.26 0-11.57-3.59-13.46-8.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
            </svg>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- CTA Buttons -->
    <div style="text-align: center; display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;">
      <a href="{{ section.settings.google_review_link }}" target="_blank" rel="noopener"
        style="display: inline-flex; align-items: center; gap: 10px; background: white; border: 2px solid #0A4B78; color: #0A4B78; padding: 14px 32px; border-radius: 6px; text-decoration: none; font-weight: 700; font-size: 15px;">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 48 48">
          <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.08 17.74 9.5 24 9.5z"/>
          <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
          <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
          <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.18 1.48-4.97 2.31-8.16 2.31-6.26 0-11.57-3.59-13.46-8.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
        </svg>
        See All Our Reviews
      </a>
      <a href="{{ section.settings.leave_review_link }}" target="_blank" rel="noopener"
        style="display: inline-flex; align-items: center; gap: 10px; background: #00A86B; color: white; padding: 14px 32px; border-radius: 6px; text-decoration: none; font-weight: 700; font-size: 15px;">
        ⭐ Leave Us a Review
      </a>
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Google Reviews",
  "settings": [
    { "type": "color", "id": "background_color", "label": "Background color", "default": "#F5F7FA" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "What Our Customers Say" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Don't take our word for it — hear from the anglers, sailors, and families we've served on the Crystal Coast." },
    { "type": "text", "id": "review_count", "label": "Review summary text", "default": "5.0 · 50+ Google Reviews" },
    { "type": "url", "id": "google_review_link", "label": "Link to view all Google reviews" },
    { "type": "url", "id": "leave_review_link", "label": "Link to leave a Google review" }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        { "type": "textarea", "id": "review_text", "label": "Review text" },
        { "type": "text", "id": "reviewer_name", "label": "Reviewer name" },
        { "type": "text", "id": "review_date", "label": "Date or source label", "default": "Google Review" }
      ]
    }
  ],
  "presets": [{ "name": "Google Reviews" }]
}
{% endschema %}
