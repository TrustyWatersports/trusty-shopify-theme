{% schema %}
{
  "name": "Programs Events",
  "settings": [
    {
      "type": "text",
      "id": "section_icon",
      "label": "Section Icon (emoji)",
      "default": "üìÖ"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Upcoming Events"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#0A4B78"
    }
  ],
  "blocks": [
    {
      "type": "event",
      "name": "Event",
      "settings": [
        {
          "type": "image_picker",
          "id": "event_image",
          "label": "Event Banner (optional)"
        },
        {
          "type": "text",
          "id": "event_icon",
          "label": "Icon (emoji)",
          "default": "üèÜ"
        },
        {
          "type": "text",
          "id": "event_name",
          "label": "Event Name"
        },
        {
          "type": "textarea",
          "id": "event_description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "event_when",
          "label": "When (Day/Frequency)",
          "default": "Saturdays"
        },
        {
          "type": "text",
          "id": "event_time",
          "label": "Time",
          "default": "10:00 AM - 2:00 PM"
        },
        {
          "type": "text",
          "id": "event_cost",
          "label": "Cost",
          "default": "Free"
        },
        {
          "type": "color",
          "id": "event_color",
          "label": "Accent Color",
          "default": "#D32F2F"
        },
        {
          "type": "checkbox",
          "id": "show_button",
          "label": "Show Button",
          "default": true
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Programs Events"
    }
  ]
}
{% endschema %}

<section style="padding: 80px 20px; background: white;">
  <div style="max-width: 1200px; margin: 0 auto;">
    
    <div style="text-align: center; margin-bottom: 60px;">
      <div style="font-size: 3rem; margin-bottom: 1rem;">{{ section.settings.section_icon }}</div>
      <h2 style="font-size: 2.5rem; color: {{ section.settings.title_color }}; margin-bottom: 1rem;">{{ section.settings.section_title }}</h2>
      {% if section.settings.section_description != blank %}
        <p style="font-size: 1.2rem; color: #666; max-width: 700px; margin: 0 auto;">{{ section.settings.section_description }}</p>
      {% endif %}
    </div>

    <div style="display: grid; gap: 40px;">
      {% for block in section.blocks %}
        <div style="background: linear-gradient(to right, {{ block.settings.event_color }}15 0%, white 30%); border-left: 6px solid {{ block.settings.event_color }}; border-radius: 12px; overflow: hidden; box-shadow: 0 2px 12px rgba(0,0,0,0.08);">
          
          <div style="display: grid; grid-template-columns: {% if block.settings.event_image %}300px {% endif %}1fr; gap: 0;">
            {% if block.settings.event_image %}
              <img src="{{ block.settings.event_image | img_url: '400x' }}" alt="{{ block.settings.event_name }}" style="width: 100%; height: 100%; object-fit: cover;">
            {% endif %}
            
            <div style="padding: 2rem;">
              <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                <span style="font-size: 2.5rem;">{{ block.settings.event_icon }}</span>
                <h3 style="font-size: 1.8rem; color: #0a4b78; margin: 0;">{{ block.settings.event_name }}</h3>
              </div>
              
              <p style="color: #333; line-height: 1.7; margin-bottom: 1.5rem;">{{ block.settings.event_description }}</p>
              
              <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-bottom: 1.5rem;">
                <div style="background: white; padding: 1rem; border-radius: 8px; border: 2px solid #f0f0f0;">
                  <div style="font-size: 0.875rem; color: #666; margin-bottom: 0.25rem;">üìÖ When</div>
                  <div style="font-weight: 600; color: #0a4b78;">{{ block.settings.event_when }}</div>
                </div>
                <div style="background: white; padding: 1rem; border-radius: 8px; border: 2px solid #f0f0f0;">
                  <div style="font-size: 0.875rem; color: #666; margin-bottom: 0.25rem;">üïí Time</div>
                  <div style="font-weight: 600; color: #0a4b78;">{{ block.settings.event_time }}</div>
                </div>
                <div style="background: white; padding: 1rem; border-radius: 8px; border: 2px solid #f0f0f0;">
                  <div style="font-size: 0.875rem; color: #666; margin-bottom: 0.25rem;">üí∞ Cost</div>
                  <div style="font-weight: 600; color: {{ block.settings.event_color }};">{{ block.settings.event_cost }}</div>
                </div>
              </div>
              
              {% if block.settings.show_button %}
                <a href="{{ block.settings.button_link }}" style="display: inline-block; background: {{ block.settings.event_color }}; color: white; padding: 0.875rem 2rem; border-radius: 6px; text-decoration: none; font-weight: 600; transition: all 0.3s;">{{ block.settings.button_text }}</a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

  </div>
</section>

<style>
@media (max-width: 768px) {
  section > div > div > div > div:first-child {
    grid-template-columns: 1fr !important;
  }
  section > div > div > div > div:last-child > div:nth-child(4) {
    grid-template-columns: 1fr !important;
  }
}
</style>
