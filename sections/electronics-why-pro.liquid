<section style="padding: 80px 20px; background: {{ section.settings.background_color }};">
  <div style="max-width: 1100px; margin: 0 auto;">
    <div style="text-align: center; margin-bottom: 50px;">
      <h2 style="font-size: 38px; font-weight: 800; color: var(--ocean-deep); margin-bottom: 15px;">{{ section.settings.heading }}</h2>
      <p style="font-size: 18px; color: var(--gray-medium);">{{ section.settings.subheading }}</p>
    </div>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 25px;">
      {% for block in section.blocks %}
        <div {{ block.shopify_attributes }} style="background: white; padding: 30px; border-radius: 12px; border-left: 4px solid var(--ocean-medium);">
          <div style="font-size: 36px; margin-bottom: 12px;">{{ block.settings.emoji }}</div>
          <h3 style="font-size: 20px; font-weight: 800; margin-bottom: 8px; color: var(--ocean-deep);">{{ block.settings.title }}</h3>
          <p style="color: var(--gray-medium); line-height: 1.7; font-size: 15px;">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Electronics Why Pro",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Why Professional Installation Matters" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "A bad wiring job can fry your electronics or drain your battery mid-trip. Don't risk it." },
    { "type": "color", "id": "background_color", "label": "Background", "default": "#FFFFFF" }
  ],
  "blocks": [{
    "type": "reason",
    "name": "Reason",
    "settings": [
      { "type": "text", "id": "emoji", "label": "Emoji", "default": "âš¡" },
      { "type": "text", "id": "title", "label": "Title", "default": "Clean Wiring" },
      { "type": "textarea", "id": "description", "label": "Description", "default": "Proper fusing, routing, and waterproofing. No rats nest of wires that causes intermittent failures on the water." }
    ]
  }],
  "presets": [{ "name": "Electronics Why Pro" }]
}
{% endschema %}
