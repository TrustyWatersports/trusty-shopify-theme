<section class="trusty-why">
  <div class="trusty-why__container">
    <div class="trusty-why__header">
      <h2>{{ section.settings.heading }}</h2>
      <p class="trusty-why__subtitle">{{ section.settings.subtitle }}</p>
    </div>
    <div class="trusty-why__grid">
      {% for block in section.blocks %}
        <div class="trusty-why__item" {{ block.shopify_attributes }}>
          <div class="trusty-why__item-icon">{{ block.settings.icon }}</div>
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

