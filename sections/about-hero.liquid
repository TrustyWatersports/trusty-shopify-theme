{% schema %}
{
  "name": "About Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "year",
      "label": "Year",
      "default": "2025"
    },
    {
      "type": "text",
      "id": "family_title",
      "label": "Family Title",
      "default": "The Fournel Family"
    },
    {
      "type": "text",
      "id": "family_members",
      "label": "Family Members",
      "default": "Andrew, Heather, Abraham, Thomas & Rose"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#0A4B78"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "label": "Overlay Opacity %",
      "default": 40
    }
  ]
}
{% endschema %}

<section style="position: relative; min-height: 500px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
  {% if section.settings.hero_image %}
    <img src="{{ section.settings.hero_image | img_url: '2048x' }}" alt="{{ section.settings.family_title }}" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover;">
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
  {% else %}
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(135deg, {{ section.settings.overlay_color }} 0%, #1E6FA8 100%);"></div>
  {% endif %}
  
  <div style="position: relative; z-index: 2; text-align: center; padding: 80px 20px; color: white;">
    <div style="font-size: 4rem; font-weight: bold; margin-bottom: 2rem;">{{ section.settings.year }}</div>
    <h1 style="font-size: 2.5rem; margin-bottom: 1rem; font-weight: bold;">{{ section.settings.family_title }}</h1>
    <p style="font-size: 1.3rem; opacity: 0.95;">{{ section.settings.family_members }}</p>
  </div>
</section>
