<div id="how-it-works" style="max-width: 1200px; margin: 0 auto 100px; padding: 0 20px;">
  <div style="text-align: center; margin-bottom: 60px;">
    <h2 style="font-size: 48px; font-weight: 900; color: var(--ocean-deep); margin-bottom: 20px;">{{ section.settings.heading }}</h2>
    <p style="font-size: 20px; color: var(--gray-medium); max-width: 700px; margin: 0 auto;">{{ section.settings.description }}</p>
  </div>

  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 40px;">
    {% for block in section.blocks %}
    <div style="text-align: center; position: relative;" {{ block.shopify_attributes }}>
      <div style="width: 100px; height: 100px; background: {{ block.settings.gradient }}; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 25px; font-size: 48px; font-weight: 900; color: white; box-shadow: 0 8px 25px rgba(0,168,107,0.3);">{{ block.settings.number }}</div>
      <h3 style="font-size: 28px; font-weight: 800; color: var(--ocean-deep); margin-bottom: 15px;">{{ block.settings.title }}</h3>
      <p style="font-size: 16px; line-height: 1.7; color: var(--text-dark);">{{ block.settings.description }}</p>
    </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "How It Works",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How It Works"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Three simple steps from choosing your kayak to catching fish"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Step Number",
          "default": "1"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Step Title",
          "default": "Choose Your Kayak"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Step Description"
        },
        {
          "type": "text",
          "id": "gradient",
          "label": "Gradient CSS",
          "default": "linear-gradient(135deg, var(--rigging-accent), #00C77F)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "How It Works",
      "blocks": [
        {
          "type": "step",
          "settings": {
            "number": "1",
            "title": "Choose Your Kayak",
            "description": "Select from premium fishing kayak models or bring your own. We work with all major brands including Hobie, Old Town, Native, and more.",
            "gradient": "linear-gradient(135deg, var(--rigging-accent), #00C77F)"
          }
        },
        {
          "type": "step",
          "settings": {
            "number": "2",
            "title": "Customize Your Rig",
            "description": "Pick your rigging package or go fully custom. Fish finders, rod holders, lighting, power systems - we install it all professionally.",
            "gradient": "linear-gradient(135deg, var(--ocean-medium), var(--ocean-deep))"
          }
        },
        {
          "type": "step",
          "settings": {
            "number": "3",
            "title": "Ship & Fish",
            "description": "We ship your turnkey rig nationwide. Unbox it, hit the water, and start catching. No DIY stress, no missing parts, no regrets.",
            "gradient": "linear-gradient(135deg, var(--sunrise), #FF8F66)"
          }
        }
      ]
    }
  ]
}
{% endschema %}
