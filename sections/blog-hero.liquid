{% schema %}
{
  "name": "Blog Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "range",
      "id": "hero_height",
      "min": 300,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Hero Height",
      "default": 500
    }
  ]
}
{% endschema %}

<section style="width: 100%; height: {{ section.settings.hero_height }}px; overflow: hidden;">
  {% if section.settings.hero_image %}
    <img src="{{ section.settings.hero_image | img_url: '2048x' }}" alt="Blog" style="width: 100%; height: 100%; object-fit: cover;">
  {% else %}
    <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #0A4B78 0%, #1E6FA8 100%);"></div>
  {% endif %}
</section>
