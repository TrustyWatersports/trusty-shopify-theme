{% schema %}
{
  "name": "Blog Posts Grid",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#E8F4F8"
    }
  ],
  "blocks": [
    {
      "type": "blog_post",
      "name": "Blog Post",
      "settings": [
        {
          "type": "image_picker",
          "id": "post_image",
          "label": "Post Image"
        },
        {
          "type": "text",
          "id": "post_title",
          "label": "Post Title"
        },
        {
          "type": "textarea",
          "id": "post_excerpt",
          "label": "Post Excerpt"
        },
        {
          "type": "url",
          "id": "post_link",
          "label": "Post Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Read More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Blog Posts Grid"
    }
  ]
}
{% endschema %}

<section style="padding: 80px 20px; background: {{ section.settings.background_color }};">
  <div style="max-width: 1200px; margin: 0 auto;">
    
    <div style="display: grid; grid-template-columns: 1fr; gap: 60px;">
      {% for block in section.blocks %}
        <div style="background: white; overflow: hidden; box-shadow: 0 2px 12px rgba(0,0,0,0.08);">
          
          {% if block.settings.post_image %}
            <img src="{{ block.settings.post_image | img_url: '1200x' }}" alt="{{ block.settings.post_title }}" style="width: 100%; height: 400px; object-fit: cover;">
          {% endif %}
          
          <div style="padding: 3rem;">
            <h2 style="font-size: 2rem; color: #0a4b78; margin-bottom: 1rem; line-height: 1.3;">{{ block.settings.post_title }}</h2>
            <p style="color: #333; line-height: 1.8; margin-bottom: 2rem; font-size: 1.1rem;">{{ block.settings.post_excerpt }}</p>
            <a href="{{ block.settings.post_link }}" style="display: inline-block; color: #00A86B; font-weight: 600; font-size: 1.1rem; text-decoration: none; border-bottom: 2px solid #00A86B; padding-bottom: 4px;">{{ block.settings.button_text }}</a>
          </div>
        </div>
      {% endfor %}
    </div>
    
  </div>
</section>
