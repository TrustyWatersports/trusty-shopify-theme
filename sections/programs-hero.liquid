{% schema %}
{
  "name": "Programs Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Background Image (optional)"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "Programs & Events"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "Hero Subtitle",
      "default": "Sailing lessons, guided tours, and Crystal Coast watersports experiences"
    },
    {
      "type": "checkbox",
      "id": "show_icon",
      "label": "Show Icon",
      "default": true
    },
    {
      "type": "text",
      "id": "hero_icon",
      "label": "Hero Icon (emoji)",
      "default": "â›µ"
    },
    {
      "type": "color",
      "id": "hero_color_start",
      "label": "Gradient Start Color",
      "default": "#D32F2F"
    },
    {
      "type": "color",
      "id": "hero_color_end",
      "label": "Gradient End Color",
      "default": "#B71C1C"
    }
  ]
}
{% endschema %}

<section style="position: relative; padding: 80px 20px; text-align: center; color: white; overflow: hidden;">
  {% if section.settings.hero_image %}
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-image: url('{{ section.settings.hero_image | img_url: '2048x' }}'); background-size: cover; background-position: center; opacity: 0.3; z-index: 0;"></div>
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(135deg, {{ section.settings.hero_color_start }} 0%, {{ section.settings.hero_color_end }} 100%); opacity: 0.9; z-index: 1;"></div>
  {% else %}
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(135deg, {{ section.settings.hero_color_start }} 0%, {{ section.settings.hero_color_end }} 100%); z-index: 0;"></div>
  {% endif %}
  
  <div style="max-width: 800px; margin: 0 auto; position: relative; z-index: 2;">
    {% if section.settings.show_icon %}
      <div style="font-size: 4rem; margin-bottom: 1rem;">{{ section.settings.hero_icon }}</div>
    {% endif %}
    <h1 style="font-size: 3rem; margin-bottom: 1rem; font-weight: bold;">{{ section.settings.hero_title }}</h1>
    <p style="font-size: 1.3rem; opacity: 0.95;">{{ section.settings.hero_subtitle }}</p>
  </div>
</section>
