<section style="padding: 80px 20px; background: {{ section.settings.background_color }};">
  <div style="max-width: 900px; margin: 0 auto; text-align: center;">
    <h2 style="font-size: 38px; font-weight: 800; color: var(--ocean-deep); margin-bottom: 15px;">{{ section.settings.heading }}</h2>
    <p style="font-size: 18px; color: var(--gray-medium); margin-bottom: 40px;">{{ section.settings.subheading }}</p>
    <div style="display: flex; gap: 20px; justify-content: center; flex-wrap: wrap; margin-bottom: 40px;">
      {% if section.settings.booking_url != blank %}
        <a href="{{ section.settings.booking_url }}" target="_blank" style="background: var(--rigging-accent); color: white; padding: 16px 36px; border-radius: 6px; text-decoration: none; font-weight: 700; font-size: 18px;">{{ section.settings.booking_button_text }}</a>
      {% endif %}
      <a href="tel:{{ section.settings.phone }}" style="background: var(--ocean-medium); color: white; padding: 16px 36px; border-radius: 6px; text-decoration: none; font-weight: 700; font-size: 18px;">ğŸ“ Call {{ section.settings.phone }}</a>
    </div>
    <div style="background: var(--gray-light); padding: 30px; border-radius: 12px; display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; text-align: left;">
      <div><strong style="color: var(--ocean-deep); display: block; margin-bottom: 5px;">ğŸ“ Location</strong><span style="color: var(--gray-medium);">{{ section.settings.address }}</span></div>
      <div><strong style="color: var(--ocean-deep); display: block; margin-bottom: 5px;">ğŸ• Hours</strong><span style="color: var(--gray-medium);">{{ section.settings.hours }}</span></div>
      <div><strong style="color: var(--ocean-deep); display: block; margin-bottom: 5px;">ğŸ“ Phone</strong><a href="tel:{{ section.settings.phone }}" style="color: var(--ocean-medium); text-decoration: none; font-weight: 600;">{{ section.settings.phone }}</a></div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rentals Booking",
  "settings": [
    { "type": "color", "id": "background_color", "label": "Background color", "default": "#FFFFFF" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Ready to Get on the Water?" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Book online or give us a call â€” we'll get you set up." },
    { "type": "url", "id": "booking_url", "label": "Booking link (Calendly URL)" },
    { "type": "text", "id": "booking_button_text", "label": "Booking button text", "default": "ğŸ“… Book a Rental" },
    { "type": "text", "id": "phone", "label": "Phone number", "default": "(252) 515-4866" },
    { "type": "text", "id": "address", "label": "Address", "default": "815 Shepard St, Morehead City, NC" },
    { "type": "text", "id": "hours", "label": "Hours", "default": "Daily 9amâ€“6pm (Seasonal)" }
  ],
  "presets": [{ "name": "Rentals Booking" }]
}
{% endschema %}
