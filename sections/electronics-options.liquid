<section style="padding: 80px 20px; background: {{ section.settings.background_color }};">
  <div style="max-width: 1200px; margin: 0 auto;">
    <div style="text-align: center; margin-bottom: 50px;">
      <h2 style="font-size: 38px; font-weight: 800; color: var(--ocean-deep); margin-bottom: 15px;">{{ section.settings.heading }}</h2>
      <p style="font-size: 18px; color: var(--gray-medium); max-width: 700px; margin: 0 auto;">{{ section.settings.subheading }}</p>
    </div>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 30px;">
      {% for block in section.blocks %}
        <div {{ block.shopify_attributes }} style="background: white; border-radius: 12px; box-shadow: 0 4px 16px rgba(0,0,0,0.08); overflow: hidden;">
          {% if block.settings.image != blank %}
            {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', style: 'width:100%; height:220px; object-fit:cover; display:block;' }}
          {% else %}
            <div style="background: linear-gradient(135deg, #0A4B78, #1E6FA8); height: 120px; display:flex; align-items:center; justify-content:center; font-size: 52px;">{{ block.settings.emoji }}</div>
          {% endif %}
          <div style="padding: 28px;">
            <div style="font-size: 11px; font-weight: 800; letter-spacing: 1.5px; color: var(--rigging-accent); margin-bottom: 8px; text-transform: uppercase;">{{ block.settings.category }}</div>
            <h3 style="font-size: 22px; font-weight: 800; margin-bottom: 10px; color: var(--ocean-deep);">{{ block.settings.title }}</h3>
            <p style="color: var(--gray-medium); line-height: 1.7; margin-bottom: 16px;">{{ block.settings.description }}</p>
            {% if block.settings.specs != blank %}
              <div style="background: var(--gray-light); padding: 14px; border-radius: 8px; font-size: 14px; color: var(--text-dark);">
                <strong style="display: block; margin-bottom: 6px; color: var(--ocean-deep);">What we install:</strong>
                {{ block.settings.specs }}
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Electronics Options",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Electronics We Install" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "From entry-level fishfinders to full Livescope setups â€” we spec, source, and install it all." },
    { "type": "color", "id": "background_color", "label": "Background", "default": "#F5F7FA" }
  ],
  "blocks": [{
    "type": "option",
    "name": "Electronics Option",
    "settings": [
      { "type": "image_picker", "id": "image", "label": "Image" },
      { "type": "text", "id": "emoji", "label": "Emoji (if no image)", "default": "ðŸ“¡" },
      { "type": "text", "id": "category", "label": "Category label", "default": "Garmin" },
      { "type": "text", "id": "title", "label": "Title", "default": "Livescope Plus System" },
      { "type": "textarea", "id": "description", "label": "Description", "default": "Real-time live sonar that shows fish swimming in real time. The gold standard for tournament kayak fishing." },
      { "type": "textarea", "id": "specs", "label": "What we install", "default": "LVS34 transducer, GLS 10 black box, compatible chartplotter mount" }
    ]
  }],
  "presets": [{ "name": "Electronics Options" }]
}
{% endschema %}
