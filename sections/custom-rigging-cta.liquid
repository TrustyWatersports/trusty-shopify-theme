<section class="rigging-cta">
  <div class="page-width">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.text }}</p>

    {% if section.settings.primary_btn_link != blank %}
      <a href="{{ section.settings.primary_btn_link }}" class="button button--primary">
        {{ section.settings.primary_btn_text }}
      </a>
    {% endif %}

    {% if section.settings.secondary_btn_link != blank %}
      <a href="{{ section.settings.secondary_btn_link }}" class="button button--secondary">
        {{ section.settings.secondary_btn_text }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Custom Rigging CTA",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ready to Build Your Custom Rig?"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Talk to our Crystal Coast rigging experts today."
    },
    {
      "type": "text",
      "id": "primary_btn_text",
      "label": "Primary Button Text",
      "default": "Contact Us"
    },
    {
      "type": "url",
      "id": "primary_btn_link",
      "label": "Primary Button Link",
      "default": ""
    },
    {
      "type": "text",
      "id": "secondary_btn_text",
      "label": "Secondary Button Text",
      "default": "View Packages"
    },
    {
      "type": "url",
      "id": "secondary_btn_link",
      "label": "Secondary Button Link",
      "default": ""
    }
  ],
  "presets": [
    {
      "name": "Custom Rigging CTA"
    }
  ]
}
{% endschema %}
