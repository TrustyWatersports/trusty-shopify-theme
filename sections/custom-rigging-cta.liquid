<section class="cr-cta">
  <div class="cr-cta__inner page-width">
    {% if section.settings.heading != blank %}
      <h2 class="cr-cta__heading">{{ section.settings.heading | escape }}</h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="cr-cta__subheading">{{ section.settings.subheading | escape }}</p>
    {% endif %}

    <div class="cr-cta__buttons">
      {% if section.settings.primary_btn_text != blank %}
        <a class="cr-btn cr-btn--primary" href="{{ section.settings.primary_btn_link | default: 'tel:252-499-9911' }}">
          {{ section.settings.primary_btn_text | escape }}
        </a>
      {% endif %}

      {% if section.settings.secondary_btn_text != blank %}
        <a class="cr-btn cr-btn--secondary" href="{{ section.settings.secondary_btn_link | default: 'mailto:rigging@trustysailandpaddle.com' }}">
          {{ section.settings.secondary_btn_text | escape }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .cr-cta { padding: 56px 0; }
  .cr-cta__inner { text-align: center; }
  .cr-cta__heading { margin: 0 0 10px; }
  .cr-cta__subheading { margin: 0 0 20px; opacity: .85; }
  .cr-cta__buttons { display: flex; gap: 12px; justify-content: center; flex-wrap: wrap; }
  .cr-btn { display: inline-block; padding: 12px 18px; border-radius: 10px; text-decoration: none; font-weight: 700; }
  .cr-btn--primary { background: #0aa86b; color: #fff; }
  .cr-btn--secondary { border: 2px solid #0aa86b; color: #0aa86b; background: transparent; }
</style>

{% schema %}
{
  "name": "Custom Rigging CTA",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Ready to Build Your Dream Rig?" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Call or email us and weâ€™ll help you spec it out." },

    { "type": "text", "id": "primary_btn_text", "label": "Primary button text", "default": "Call Rigging" },
    { "type": "text", "id": "primary_btn_link", "label": "Primary button link (any URL)", "default": "tel:252-499-9911" },

    { "type": "text", "id": "secondary_btn_text", "label": "Secondary button text", "default": "Email Rigging" },
    { "type": "text", "id": "secondary_btn_link", "label": "Secondary button link (any URL)", "default": "mailto:trustywatersports@gmail.com" }
  ],
  "presets": [
    { "name": "Custom Rigging CTA" }
  ]
}
{% endschema %}
