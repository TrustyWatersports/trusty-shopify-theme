<section class="cr-cta">
  <div class="page-width">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.text }}</p>

    {% if section.settings.primary_btn_link != blank %}
      <a class="button" href="{{ section.settings.primary_btn_link }}">
        {{ section.settings.primary_btn_text }}
      </a>
    {% endif %}

    {% if section.settings.secondary_btn_link != blank %}
      <a class="button button--secondary" href="{{ section.settings.secondary_btn_link }}">
        {{ section.settings.secondary_btn_text }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Custom Rigging CTA",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ready to Build Your Dream Rig?"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Talk with our rigging team today."
    },
    {
      "type": "text",
      "id": "primary_btn_text",
      "label": "Primary Button Text",
      "default": "Start Your Build"
    },
    {
      "type": "url",
      "id": "primary_btn_link",
      "label": "Primary Button Link",
      "default": ""
    },
    {
      "type": "text",
      "id": "secondary_btn_text",
      "label": "Secondary Button Text",
      "default": "Browse Packages"
    },
    {
      "type": "url",
      "id": "secondary_btn_link",
      "label": "Secondary Button Link",
      "default": ""
    }
  ],
  "presets": [
    {
      "name": "Custom Rigging CTA"
    }
  ]
}
{% endschema %}
