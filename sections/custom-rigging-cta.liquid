<div style="background: linear-gradient(135deg, var(--rigging-accent), #00C77F); color: white; padding: 100px 40px; text-align: center; margin: 0 -20px -20px; border-radius: 20px 20px 0 0;">
  <div style="max-width: 800px; margin: 0 auto;">
    <h2 style="font-size: 52px; font-weight: 900; margin-bottom: 25px;">{{ section.settings.heading }}</h2>
    <p style="font-size: 22px; margin-bottom: 40px; opacity: 0.95; line-height: 1.6;">{{ section.settings.description }}</p>
    
    <div style="display: flex; gap: 20px; justify-content: center; flex-wrap: wrap; margin-bottom: 30px;">
      {% if section.settings.primary_btn_text != blank %}
      <a href="{{ section.settings.primary_btn_link }}" style="display: inline-block; padding: 20px 40px; background: white; color: var(--rigging-accent); text-decoration: none; border-radius: 8px; font-weight: 800; font-size: 20px; box-shadow: 0 8px 25px rgba(0,0,0,0.15);">{{ section.settings.primary_btn_text }}</a>
      {% endif %}
      {% if section.settings.secondary_btn_text != blank %}
      <a href="{{ section.settings.secondary_btn_link }}" style="display: inline-block; padding: 20px 40px; background: var(--ocean-deep); color: white; text-decoration: none; border-radius: 8px; font-weight: 800; font-size: 20px;">{{ section.settings.secondary_btn_text }}</a>
      {% endif %}
    </div>
    
    {% if section.settings.footer_text != blank %}
    <p style="opacity: 0.9; font-size: 16px;">{{ section.settings.footer_text }}</p>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Final CTA",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ready to Build Your Dream Rig?"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Stop wasting time on DIY frustrations. Get a professional, tournament-ready fishing machine built by experts who fish these waters daily."
    },
    {
      "type": "text",
      "id": "primary_btn_text",
      "label": "Primary Button Text",
      "default": "üìû Call Now: (252) 499-9911"
    },
    {
      "type": "url",
      "id": "primary_btn_link",
      "label": "Primary Button Link",
      "default": "tel:252-499-9911"
    },
    {
      "type": "text",
      "id": "secondary_btn_text",
      "label": "Secondary Button Text",
      "default": "‚úâÔ∏è Email Us"
    },
    {
      "type": "url",
      "id": "secondary_btn_link",
      "label": "Secondary Button Link",
      "default": "mailto:rigging@trustysailandpaddle.com"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "Or visit our shop at 4866 Arendell St, Morehead City, NC"
    }
  ],
  "presets": [
    {
      "name": "Final CTA"
    }
  ]
}
{% endschema %}
