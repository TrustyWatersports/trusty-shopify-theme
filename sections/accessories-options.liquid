<section style="padding: 80px 20px; background: {{ section.settings.background_color }};">
  <div style="max-width: 1200px; margin: 0 auto;">
    <div style="text-align: center; margin-bottom: 50px;">
      <h2 style="font-size: 38px; font-weight: 800; color: var(--ocean-deep); margin-bottom: 15px;">{{ section.settings.heading }}</h2>
      <p style="font-size: 18px; color: var(--gray-medium); max-width: 700px; margin: 0 auto;">{{ section.settings.subheading }}</p>
    </div>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 25px;">
      {% for block in section.blocks %}
        <div {{ block.shopify_attributes }} style="background: white; border-radius: 12px; padding: 28px; box-shadow: 0 4px 16px rgba(0,0,0,0.06);">
          {% if block.settings.image != blank %}
            <div style="margin-bottom: 20px; border-radius: 8px; overflow: hidden;">
              {{ block.settings.image | image_url: width: 600 | image_tag: loading: 'lazy', style: 'width:100%; height:180px; object-fit:cover; display:block;' }}
            </div>
          {% else %}
            <div style="font-size: 44px; margin-bottom: 16px;">{{ block.settings.emoji }}</div>
          {% endif %}
          <div style="font-size: 11px; font-weight: 800; letter-spacing: 1.5px; color: var(--rigging-accent); margin-bottom: 8px; text-transform: uppercase;">{{ block.settings.category }}</div>
          <h3 style="font-size: 20px; font-weight: 800; margin-bottom: 10px; color: var(--ocean-deep);">{{ block.settings.title }}</h3>
          <p style="color: var(--gray-medium); line-height: 1.7; font-size: 15px;">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Accessories Options",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Accessories & Rigging Add-Ons" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "The details that make your kayak fishable. We source and install the best components available." },
    { "type": "color", "id": "background_color", "label": "Background", "default": "#F5F7FA" }
  ],
  "blocks": [{
    "type": "accessory",
    "name": "Accessory",
    "settings": [
      { "type": "image_picker", "id": "image", "label": "Image" },
      { "type": "text", "id": "emoji", "label": "Emoji (if no image)", "default": "ðŸŽ£" },
      { "type": "text", "id": "category", "label": "Category", "default": "Storage" },
      { "type": "text", "id": "title", "label": "Title", "default": "Crate Systems" },
      { "type": "textarea", "id": "description", "label": "Description", "default": "Custom milk crate setups with rod holders, dry storage, and tackle organization. Built for the way you fish." }
    ]
  }],
  "presets": [{ "name": "Accessories Options" }]
}
{% endschema %}
