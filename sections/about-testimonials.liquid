{% schema %}
{
  "name": "About Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "What People In The Community Are Saying About Trusty!"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#F5F7FA"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Testimonials"
    }
  ]
}
{% endschema %}

<section style="padding: 80px 20px; background: {{ section.settings.background_color }};">
  <div style="max-width: 1200px; margin: 0 auto;">
    
    <h2 style="text-align: center; font-size: 2rem; color: #0a4b78; margin-bottom: 3rem; font-weight: bold;">{{ section.settings.section_title }}</h2>
    
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); gap: 30px;">
      {% for block in section.blocks %}
        <div style="background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.08); border-left: 4px solid #0a4b78;">
          <p style="font-size: 1rem; line-height: 1.7; color: #333; margin-bottom: 1rem; font-style: italic;">"{{ block.settings.quote }}"</p>
          <p style="font-weight: 600; color: #0a4b78; text-align: right;">â€” {{ block.settings.author }}</p>
        </div>
      {% endfor %}
    </div>
    
  </div>
</section>

<style>
@media (max-width: 768px) {
  section > div > div {
    grid-template-columns: 1fr !important;
  }
}
</style>
