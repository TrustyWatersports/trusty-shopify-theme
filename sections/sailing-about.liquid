{% schema %}
{
  "name": "Sailing About",
  "settings": [
    {
      "type": "image_picker",
      "id": "about_image",
      "label": "Feature Image (optional)"
    },
    {
      "type": "checkbox",
      "id": "show_badge",
      "label": "Show Badge",
      "default": true
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "OFFICIAL US DISTRIBUTOR"
    },
    {
      "type": "color",
      "id": "badge_color",
      "label": "Badge Color",
      "default": "#D32F2F"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Topper & Topaz Sailboats"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Subtitle",
      "default": "Premium small dinghies from the UK"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#0A4B78"
    },
    {
      "type": "text",
      "id": "content_title",
      "label": "Content Title",
      "default": "Built for Sailors of All Levels"
    },
    {
      "type": "html",
      "id": "content_text",
      "label": "Content (HTML)",
      "default": "<p>High-quality sailboats from the United Kingdom.</p>"
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Show Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Sailboats"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#D32F2F"
    },
    {
      "type": "checkbox",
      "id": "show_stats",
      "label": "Show Statistics",
      "default": true
    },
    {
      "type": "text",
      "id": "stat1_number",
      "label": "Stat 1 Number",
      "default": "50+"
    },
    {
      "type": "text",
      "id": "stat1_label",
      "label": "Stat 1 Label",
      "default": "Years of Innovation"
    },
    {
      "type": "text",
      "id": "stat2_number",
      "label": "Stat 2 Number",
      "default": "100k+"
    },
    {
      "type": "text",
      "id": "stat2_label",
      "label": "Stat 2 Label",
      "default": "Boats Worldwide"
    },
    {
      "type": "text",
      "id": "stat3_number",
      "label": "Stat 3 Number",
      "default": "#1"
    },
    {
      "type": "text",
      "id": "stat3_label",
      "label": "Stat 3 Label",
      "default": "In the UK"
    }
  ]
}
{% endschema %}

<section style="padding: 80px 20px; background: white;">
  <div style="max-width: 1200px; margin: 0 auto;">
    
    <div style="text-align: center; margin-bottom: 60px;">
      {% if section.settings.show_badge %}
        <span style="display: inline-block; background: {{ section.settings.badge_color }}; color: white; padding: 0.5rem 1rem; border-radius: 4px; font-size: 0.875rem; font-weight: bold; margin-bottom: 1rem;">{{ section.settings.badge_text }}</span>
      {% endif %}
      <h2 style="font-size: 2.5rem; color: {{ section.settings.title_color }}; margin: 0.5rem 0;">{{ section.settings.section_title }}</h2>
      <p style="font-size: 1.2rem; color: #666; margin: 0;">{{ section.settings.section_subtitle }}</p>
    </div>

    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 60px; align-items: center; margin-bottom: 60px;">
      <div>
        {% if section.settings.about_image %}
          <img src="{{ section.settings.about_image | img_url: '800x' }}" alt="{{ section.settings.section_title }}" style="width: 100%; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
        {% else %}
          <div style="width: 100%; aspect-ratio: 4/3; background: linear-gradient(135deg, #0a4b78 0%, #1e6fa8 100%); border-radius: 12px; display: flex; align-items: center; justify-content: center; font-size: 8rem;">â›µ</div>
        {% endif %}
      </div>
      
      <div>
        <h3 style="font-size: 1.8rem; color: #0a4b78; margin-bottom: 1rem;">{{ section.settings.content_title }}</h3>
        <div style="color: #333; line-height: 1.8; margin-bottom: 2rem;">
          {{ section.settings.content_text }}
        </div>
        {% if section.settings.show_button %}
          <a href="{{ section.settings.button_link }}" style="display: inline-block; background: {{ section.settings.button_color }}; color: white; padding: 1rem 2rem; border-radius: 6px; text-decoration: none; font-weight: 600; transition: all 0.3s;">{{ section.settings.button_text }}</a>
        {% endif %}
      </div>
    </div>

    {% if section.settings.show_stats %}
      <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 40px; padding: 40px 0; border-top: 2px solid #e0e0e0;">
        <div style="text-align: center;">
          <div style="font-size: 3rem; font-weight: bold; color: {{ section.settings.badge_color }};">{{ section.settings.stat1_number }}</div>
          <div style="font-size: 1rem; color: #666; margin-top: 0.5rem;">{{ section.settings.stat1_label }}</div>
        </div>
        <div style="text-align: center;">
          <div style="font-size: 3rem; font-weight: bold; color: {{ section.settings.badge_color }};">{{ section.settings.stat2_number }}</div>
          <div style="font-size: 1rem; color: #666; margin-top: 0.5rem;">{{ section.settings.stat2_label }}</div>
        </div>
        <div style="text-align: center;">
          <div style="font-size: 3rem; font-weight: bold; color: {{ section.settings.badge_color }};">{{ section.settings.stat3_number }}</div>
          <div style="font-size: 1rem; color: #666; margin-top: 0.5rem;">{{ section.settings.stat3_label }}</div>
        </div>
      </div>
    {% endif %}

  </div>
</section>

<style>
@media (max-width: 768px) {
  section > div > div:nth-child(2) {
    grid-template-columns: 1fr !important;
  }
  section > div > div:nth-child(3) {
    grid-template-columns: 1fr !important;
  }
}
</style>
